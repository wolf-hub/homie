                  <label class="remember-sec user-label landlord">
                  <div class="inner-user-bx">
                    <%= f.radio_button :home_type, 'Townhouse' %>
                    <span class="checkmark"></span> <span class="user-icon"><%= image_tag 'block.png' %> <%= image_tag 'block-active.png' %></span>
                    <div class="text-label">Townhouse</div>
                  </div>
                  </label>
                </div>

                <div class="col-sm-3 check-property-step">
                  <label class="remember-sec user-label landlord">
                  <div class="inner-user-bx">
                    <%= f.radio_button :home_type, 'Studio' %>
                    <span class="checkmark"></span> <span class="user-icon"><%= image_tag 'hotel-1.png' %> <%= image_tag 'hotel-1-active.png' %></span>
                    <div class="text-label">Studio</div>
                  </div>
                  </label>
                </div>

                <div class="col-sm-3 check-property-step">
                  <label class="remember-sec user-label landlord">
