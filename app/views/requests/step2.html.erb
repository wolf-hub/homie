                    <%= f.radio_button :home_type, 'Assisted Living' %>
                    <span class="checkmark"></span> <span class="user-icon"><%= image_tag 'doctor.png' %><%= image_tag 'doctor-active.png' %> </span>
                    <div class="text-label">Assisted Living</div>
                  </div>
                  </label>
                </div>
            </div>  
                         
                        <div class="row">
                         	<div class="col-md-12">
                            	<ul class="l-step-2-bed-list">
