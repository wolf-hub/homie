<div class="l-sidebar">
  <div class="landloard-profile">
    <% if profile(current_user).avatar.attached? %>
      <%= image_tag profile(current_user).avatar %>
    <% end %>    
  </div>
  
  <ul class="l-menu">
        
    <li class="<%= cp(requests_path) %>"><a href="<%= requests_path %>"><span class="l-p-icon"><%= image_tag "accpted-icon.png" %></span> My requests</a></li>
    <% if profile(current_user) %>
      <li class="<%= cp(tenant_path(profile(current_user))) %>"> <a href="<%= tenant_path(profile(current_user)) %>"><span class="l-p-icon"><%= image_tag "copy.png" %></span> My profile</a></li>
    <% else %>
      <li class="<%= cp(create_profile(current_user)) %>"> <a href="<%= create_profile(current_user) %>"><span class="l-p-icon"><%= image_tag "copy.png" %></span> My profile</a></li>
    <% end %>
    <li class="<%= cp(conversations_path) %>"><a href="<%= conversations_path %>"><span class="l-p-icon"><%= image_tag "new.png" %></span> My messages</a></li>
    <li><a href="<%= edit_user_registration_path %>"><span class="l-p-icon"><%= image_tag 'padlock-grey.png' %></span>Security</a></li>
    <li class="logout-link">
      <%= link_to destroy_user_session_path, method: :delete do %>
      <span class="l-p-icon"><%= image_tag 'logout.png' %></span>Log out
      <% end %>
    </li>
  </ul>
  <div class="l-side-btn-sec"> <a href="<%= requests_new_path %>" class="light-blue-btn">+ New Request</a> </div>
</div>