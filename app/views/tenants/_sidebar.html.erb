<div class="l-sidebar aside-1">
  <div class="landloard-profile-inbox">
    <%= showavatar(@tenant.user) %>   
  </div>
  
  <ul class="l-menu">
    
    
    <li class="<%= cp(requests_path) %>"><a href="<%= requests_path %>"><span class="l-p-icon"><%= image_tag "home-icon.png" %></span> Requests</a></li>
    <% if profile(current_user) %>
      <li class="<%= cp(tenant_path(profile(current_user))) %>"> <a href="<%= tenant_path(profile(current_user)) %>"><span class="l-p-icon"><%= image_tag "user.png" %></span> Profile</a></li>
    <% else %>
      <li class="<%= cp(create_profile(current_user)) %>"> <a href="<%= create_profile(current_user) %>"><span class="l-p-icon"><%= image_tag "user.png" %></span> Profile</a></li>
    <% end %>
    <li class="<%= cp(conversations_path) %>"><a href="<%= conversations_path %>"><span class="l-p-icon"><%= image_tag "mail-icon-grey.png" %></span> Messages</a></li>
    <li><a href="<%= edit_user_registration_path %>"><span class="l-p-icon"><%= image_tag 'padlock-grey.png' %></span>Security</a></li>
    <li class="logout-link">
      <%= link_to destroy_user_session_path, method: :delete do %>
      <span class="l-p-icon"><%= image_tag 'logout.png' %></span>Log out
      <% end %>
    </li>
  </ul>
  <div class="l-side-btn-sec"> <a href="<%= requests_new_path %>" class="light-blue-btn">+ New Request</a> </div>
</div>