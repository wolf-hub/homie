<section class="landloard-content">
  		<div class="container">
        	<div class="row">
        	<div class="col-md-3">
            	<div class="l-sidebar">
                	<ul class="l-menu">
                    	<li> <a href="#"><span class="l-p-icon"><%= image_tag("home-icon.png", :alt => "") %></span> All</a></li>
                        <li><a href="#"><span class="l-p-icon"><%= image_tag("accpted-icon.png", :alt => "") %></span> Accepted</a></li>
                        <li><a href="#"><span class="l-p-icon"><%= image_tag("dnd-icon.png", :alt => "") %></span> Not active</a></li>
                    </ul>
                    
                    <div class="l-side-btn-sec">
                    	<a href="#" class="light-blue-btn">+ New Property</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
            	<div class="landloard-rt-sec">
                	<div class="row">
                    	
                    	<% @properties.each do |property| %>
                    		<div class="col-md-4">
	                        	
	                        	<div class="property-slide-bx">
	                            	<div class="property-slider-01 owl-carousel owl-theme">
		                                <% property.images.each do |image| %>
		                                	<div class="item">
				                            	<div class="propert-image-box">
				                            		<%= image_tag image %>
				                            	</div>
			                                </div>
		                                <% end %>	                                
	                                </div>
	                                <div class="property-detail-bx" style="display: flex;">
	                                	<div class="pro-dtl-sec">
	                                    	<%= link_to property do %>
	                                    		<h5><%= property.property_name %></h5>
	                                    	<% end %>
	                                        <span class="city-name"><%= property.address %></span>
	                                    </div>
	                                    <div class="pro-bed-bx">
	                                    	<ul>
	                                        	<li><span class="bed-icon"><%= image_tag("bed-icon.png", :alt => "") %></span> <span class="pro-count"><%= property.bed_room %></span></li>
	                                            <li><span class="bathtub-icon"><%= image_tag("bathtub-icon.png", :alt => "") %></span> <span class="pro-count"><%= property.bath_room %></span></li>
	                                        </ul>
	                                    </div>
	                                </div>
	                                <div class="pro-btn-sec">
	                                	<a href="#" class="light-blue-btn">Enquiries <span>(2)</span></a>
	                                    <a href="#" class="light-red-btn">Deactivate</span></a>
	                                </div>
	                        	</div>
	                        	
	                        </div>
                    	<% end %>

                    	
                        
                        
                        
                    </div>
                </div>
            </div>
            </div>
        </div>	
  </section>
  <!-- landloard-profile end here -->