<!DOCTYPE html>
<html>
  <head>
    <title>Homie</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <% if Rails.env.production? %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-106243515-8"></script>
      <script>
       window.dataLayer = window.dataLayer || [];
       function gtag(){dataLayer.push(arguments);}
       gtag('js', new Date());
       gtag('config', 'UA-106243515-8');
      </script>
    <% end %>
  </head>

  <body>
      <div class="canvas">
        
            <% if user_signed_in? %>
              <%= render 'shared/header' %>
            <% else %>
              <% if (!request.fullpath.include?('requests/new') && !request.fullpath.include?('properties/new')) %>
                <%= render 'shared/notlogedheader' %>
               <% end %>  
            <% end %>
           
       
        
        
        <!-- header end here -->
      <%= render 'shared/message'%>
      <% if current_user %>
        <input type="hidden" id="user_id" value="<%= current_user.id %>">
      <% end %>
      <%= yield %>
        <% if user_signed_in? %>
          <%= render 'shared/footer' %>
        <% else %>
          <% if (!request.fullpath.include?('requests/new') && !request.fullpath.include?('properties/new')) %>
            <%= render 'shared/footer' %>
          <% end %>
        <% end %>
        
      
      <!-- footer end here -->    
    </div>
<!-- canvas end here --> 
  </body>
</html>
