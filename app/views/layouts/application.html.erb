<!DOCTYPE html>
<html>
  <head>
    <title>Homie</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.ico') %>

    <% if Rails.env.production? %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-106243515-8"></script>
      <script>
       window.dataLayer = window.dataLayer || [];
       function gtag(){dataLayer.push(arguments);}
       gtag('js', new Date());
       gtag('config', 'UA-106243515-8');
      </script>
      <!-- Facebook Pixel Code -->
      <script>
       !function(f,b,e,v,n,t,s)
       {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
       n.callMethod.apply(n,arguments):n.queue.push(arguments)};
       if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
       n.queue=[];t=b.createElement(e);t.async=!0;
       t.src=v;s=b.getElementsByTagName(e)[0];
       s.parentNode.insertBefore(t,s)}(window, document,'script',
       'https://connect.facebook.net/en_US/fbevents.js');
       fbq('init', '903181686719425');
       fbq('track', 'PageView');
      </script>
      <noscript><img height="1" width="1" style="display:none"
       src="https://www.facebook.com/tr?id=903181686719425&ev=PageView&noscript=1(44 B)
      https://www.facebook.com/tr?id=903181686719425&ev=PageView&noscript=1
      "
      /></noscript>
      <!-- End Facebook Pixel Code -->
    <% end %>
  </head>

  <body>
      <div class="canvas">
        
            <% if user_signed_in? %>
              <%= render 'shared/header' %>
            <% else %>
              <% if (!request.fullpath.include?('requests/new') && !request.fullpath.include?('properties/new')) %>
                <%= render 'shared/notlogedheader' %>
               <% end %>  
            <% end %>
           
       
        
        
        <!-- header end here -->
      <%= render 'shared/message'%>
      <% if current_user %>
        <input type="hidden" id="user_id" value="<%= current_user.id %>">
      <% end %>
      <%= yield %>
        <% if user_signed_in? %>
          <%= render 'shared/footer' %>
        <% else %>
          <% if (!request.fullpath.include?('requests/new') && !request.fullpath.include?('properties/new')) %>
            <%= render 'shared/footer' %>
          <% end %>
        <% end %>
        
      
      <!-- footer end here -->    
    </div>
<!-- canvas end here --> 
  </body>
</html>
