<header class="header landloard-profile-head border-bottom" style="margin-bottom: 30px;">
  <div class="container">
    <div class="row">
      <div class="col-sm-2 brand"> <a href="
        <% if current_user.role == 'landlord' %>
          <%= properties_path %>
        <% else %>
          <%= requests_path %>
        <% end %>
        "><%= image_tag("logo.png", :alt => "") %></a> </div>
        <div class="col-sm-10">
          <nav class="navbar">
            <div class="navbar-header"> 
              <a href="javascript:void()" class="menu-btn"><%= image_tag("menu-icon.png", :alt => "menu-icon") %> <%= image_tag("close-icon.png", :alt => "close-icon") %></a> 
            </div>
            <div id="bs-navbar">
              <ul class="nav navbar-nav">
                <li class="home-menu-m"><a href="
                <% if current_user.role == 'landlord' %>
                  <%= properties_path %>
                <% else %>
                  <%= requests_path %>
                <% end %>
                ">Home</a> 
                </li>
                <% if current_user.role == 'landlord' %>
                  <li class="active"><a href="<%= properties_new_path %>">+ New Property</a></li>
                <% else %>
                  <li class="active"><a href="<%= requests_new_path %>">+ New Request</a></li>
                <% end %>
                
                <li><a href="<%= conversations_path %>"><i class="fa fa-envelope-o"></i></a></li>
                <li>
              <%= link_to notifications_path do %>
                <i class="fa fa-bell-o icon-babu"></i>
                <span class="badge" id="navbar_num_of_unread"><%= current_user.unread if current_user.unread > 0 %></span>
              <% end %>
            </li>
              
              <li> 
                <% if profile(current_user) %>
                  <%= link_to current_user.email, profile(current_user), class: "user-email" %>
                <% else %>
                  <a href="<%= create_profile(current_user) %>" class="user-email"><%= current_user.email %></a>
                <% end %>
                
                 </li>
                <li style="vertical-align: middle;" class="" id="m-menu">
                  <div class="l-profile-img " >
                    <%= showavatarsmall(current_user) %>
                    <ul class=" chat-menu1">
                      <li><% if profile(current_user) %>
                  <%= link_to 'View Profile', profile(current_user) %>
                <% else %>
                  <a href="<%= create_profile(current_user) %>">View profile</a>
                <% end %></li>
                      <li><%= link_to destroy_user_session_path, method: :delete do %>
      Log out
      <% end %></li>
                    </ul>
                  </div>
                </li>
                
              </ul>
            </div>
          </nav>
        </div>
        
      </div>
    </div>
  </header>