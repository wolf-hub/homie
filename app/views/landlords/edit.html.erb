<section class="landloard-content main-landloard-profile-sec">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= render 'sidebar' %>
        </div>
        <div class="col-md-9">
          <%= form_for @landlord do |f| %>
          <div class="landloard-rt-sec">
            <div class="row">
              <div class="col-md-12">
                <div class="media pb-4"> 
                  <% if @landlord.avatar.attached? %>
                  <%= image_tag @landlord.avatar, size: "122x122", class: "mr-3 mt-3 rounded-circle" %>
                  <% end %> 
                  <div class="media-body">
                    <p>Clear frontal face photos are an important way for tenants to learn about each other.  Be sure to use a photo that clearly shows your face and doesn’t include any personal or sensitive info you’d rather not have tenants see.</p>
                    <div class="landloard-profile-btn-sec"> <%= f.file_field :avatar, direct_upload: true, class: "blue-outline-btn arrow-none-btn" %> 
                      <% if @landlord.avatar.attached? %>
                        <a href="<%= delete_image_attachment_landlord_path(@landlord.avatar.id) %>" data-method="delete" class="light-red-btn">Delete</a>
                      <% end %>
                       </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="edit-landloard-profile">
                  <div class="form-group"> <i class="fa fa-user-o input-user-icon"></i>
                    <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>                    
                  </div>
                  <div class="form-group"> <i class="fa fa-user-o input-user-icon"></i>
                    <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
                  </div>                  
                  <div class="form-group">
                    <label>Add some information about you</label>
                    <%= f.text_area :information, class: "form-control", placeholder: "Information..." %>
                  </div>
                  <div class="form-group">
                    <label>Add your address</label>
                    <%= f.text_field :address, class: "form-control tenant-address" %> 
                  </div>
                  <div class="form-group ">
                    <label>Add a phone number <span>Only tenants can see it to contact you.</span></label>
                    <div class="row">                      
                      <div class="col-md-6 phonne-tenant">
                        <%= f.telephone_field :phone_number, class: "form-control p-number" %> 
                      </div>
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <%= f.submit "Save", class: "primary-btn" %>                    
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
  <!-- landloard-profile end here -->

