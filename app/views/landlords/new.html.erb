<h1>Landlords#new</h1>

<div class="container">
	<%= form_with model: @landlord do |f| %>

        <div class="row">

          <div class="col-md-12">
            <div class="form-group">
              <label>First Name</label>
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-12">
            <div class="form-group">
              <label>Last Name</label>
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-12">
            <div class="form-group">
              <label>Information</label>
              <%= f.text_area :information, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-12">
            <div class="form-group">
              <label>Information</label>
              <%= f.telephone_field :phone_number, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-12">
				<div class="from-group">
					<%= f.file_field :avatar, direct_upload: true %>
				</div>
			</div>          

        </div>

        <div><%= f.submit "Save", class: "btn btn-normal" %></div>

      <% end %>
</div>
